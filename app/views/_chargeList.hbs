<div class="list-group">
    {{#unless charges.length}}
        <div class="alert alert-warning">You don't have any Charges created yet. Add one now using the charges tab.</div>
    {{/unless}}
    {{#if charges.length}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>amount</th>
            <th>currency</th>
            <th>created_on</th>
            <th>capture status</th>
            <th>email</th>
            <th>phone</th>
            <th>product</th>
            <th>Capture</th>
        </tr>
        </thead>
        <tbody>

        {{#each charges}}
            <tr class="b-chargeList__item" data-id="{{_id}}">
            <td>
                {{charge.amount}}
            </td>
            <td>
                {{charge.currency}}
            </td>
            <td class="col-md-4">
                {{charge.created}}
            </td>
            <td>
                {{charge.captured}}
            </td>
            <td>
                {{email}}
            </td>
            <td>
                {{phoneNumber}}
            </td>
            <td>
                {{product}}
            </td>
            <td><button class="btn btn-sm btn-default b-chargeList__capture" type="button">Capture</button></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>