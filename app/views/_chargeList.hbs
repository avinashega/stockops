<div class="list-group">
    {{#unless charges.length}}
        <div class="alert alert-warning">You don't have any Charges created yet. Add one now using the charges tab.</div>
    {{/unless}}
    {{#if charges.length}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
        <th>Name</th>
            <th>amount</th>
            <th>currency</th>
            <th>email</th>
            <th>phone</th>
            <th>product</th>
            <th>Capture</th>
        </tr>
        </thead>
        <tbody>

        {{#each charges}}
            <tr class="b-chargeList__item" data-id="{{id}}">
            <td>
                {{card.name}}
            </td>
            <td>
                {{amount}}
            </td>
            <td>
                {{currency}}
            </td>
            <td>
                {{email}}
            </td>
            <td>
                {{phoneNumber}}
            </td>
            <td>
                {{product}}
            </td>
            {{#unless captured}}
            <td><button class="btn btn-sm btn-success b-chargeList__capture" type="button">Capture</button></td>
            {{/unless}}
            {{#if captured}}
            <td>Captured</td>
            {{/if}}
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>