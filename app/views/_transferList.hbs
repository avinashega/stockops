<div class="list-group">
    {{#unless transfers.length}}
        <div class="alert alert-warning">You don't have any transfers yet.</div>
    {{/unless}}
    {{#if transfers.length}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>Recipient</th>
            <th>Amount</th>
            <th>date</th>
            <th>description</th>
        </tr>
        </thead>
        <tbody>

        {{#each transfers}}
            <tr class="b-transferList__item" data-id="{{_id}}">
            <td>
                {{recipient}}
            </td>
            <td>
                {{amount}}
            </td>
            <td class="col-md-4">
                {{date}}
            </td>
            <td>
                {{description}}
            </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>